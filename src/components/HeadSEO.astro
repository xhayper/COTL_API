---
import { SITE, OPEN_GRAPH, TWITTER } from "../consts";
import type { CollectionEntry } from 'astro:content';
import { SEO } from "astro-seo";

type Props = { canonicalUrl: URL } & CollectionEntry<'docs'>['data'];

const { ogLocale, image, title, description, canonicalUrl } = Astro.props;

const formattedContentTitle = `${title} ðŸš€ ${SITE.title}`;
const imageSrc = image?.src ?? OPEN_GRAPH.image.src;
const canonicalImageSrc = new URL(imageSrc, Astro.site);
const imageAlt = image?.alt ?? OPEN_GRAPH.image.alt;
---

<SEO
    title={formattedContentTitle}
    description={description ?? SITE.description}
    canonical={canonicalUrl.toString()}
    noindex={false}
    nofollow={false}
    openGraph={{
        basic: {
            title: formattedContentTitle,
            type: "article",
            image: canonicalImageSrc.toString(),
            url: canonicalUrl.toString(),
            locale: ogLocale ?? SITE.defaultLanguage
        },
        optional: {
            description: description ?? SITE.description,
            locale: SITE.defaultLanguage,
            siteName: SITE.title
        },
        image: {
            url: canonicalImageSrc.toString(),
            secureUrl: image ? "" : OPEN_GRAPH.image.secure_url ?? "",
            type: image ? "" : OPEN_GRAPH.image.type ?? "",
            width: image ? 0 : OPEN_GRAPH.image.width ?? 0,
            height: image ? 0 : OPEN_GRAPH.image.height ?? 0,
            alt: imageAlt
        }
    }}
    twitter={{
        card: TWITTER.card ?? "",
        site: TWITTER.site ?? "",
        creator: TWITTER.creator ?? ""
    }}
    extend={{
        meta: [
            { name: "twitter:title", content: formattedContentTitle },
            {
                name: "twitter:description",
                content: description ?? SITE.description
            },
            {
                name: "twitter:image",
                content: canonicalImageSrc.toString()
            },
            {
                name: "twitter:image:alt",
                content: imageAlt
            }
        ]
    }}
/>
