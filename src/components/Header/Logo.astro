---
import { Image } from "@astrojs/image/components";
import logo from "../../assets/logo.svg";

type Props = {
    size: number;
};

const { size } = Astro.props;
---

<Image
    class={"logo"}
    src={logo}
    alt={"Logo"}
    quality={100}
    aspectRatio="1:1"
    width={size}
    height={size}
    format={"png"}
    style={{
        "object-fit": "scale-down",
        "aspect-ratio": "1",
        "min-height": "5rem",
        "min-width": "5rem"
    }}
/>
