---
import { Image } from "@astrojs/image/components";

type Props = {
    size: number;
};
const { size } = Astro.props as Props;
---

<Image
    class={"logo"}
    src={import("../../assets/logo.svg")}
    alt={"Logo"}
    quality={100}
    aspectRatio="1:1"
    width={size}
    height={size}
    format={"png"}
    loading={"eager"}
    decoding={"sync"}
    style={{
        "object-fit": "scale-down",
        "aspect-ratio": "1",
        "min-height": "5rem",
        "min-width": "5rem"
    }}
/>
